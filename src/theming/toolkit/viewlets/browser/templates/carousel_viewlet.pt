<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="theming.toolkit.viewlets"
      tal:omit-tag="">

<body tal:define="results view/results|nothing">
  <div class="featured-listing-top fls">
    <h2 tal:content="view/get_title" />
  </div>
  <!-- include gallery JS -->
    <div class="fls-script" id="fls-script-top">
      
          <script type="text/javascript" src="++resource++theming.toolkit.viewlets/jssor.slider.mini.js" />
          <script type="text/javascript" src="++resource++theming.toolkit.viewlets/fls_integration.js" />
   
      <div class="sliderscript" tal:content="structure view/get_code|nothing"/>
      <div class="slidercss" tal:content="structure view/get_css|nothing"/>
    </div>

<div class="fls-wrapper" id="fls-top-wrapper"
    tal:define="stageCSS view/StageCss;">
  <div class="featured_listing_collection" id="slider1_container" 
    tal:attributes="style string:${stageCSS};">
      <tal:results
          tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                      wraplink python:True;">
        <div tal:condition="not:results">
          <p i18n:translate="">The collection doesn't have any results.</p>
        </div>
      <div u="slides" class="fls-slides"
        tal:attributes="style string:${stageCSS};">
        <div class="collection-item visualIEFloatFix"
             tal:repeat="listing results">
          <tal:items
              tal:define="listing_title listing/title/value;
                          provider_url view/ProviderUrl|nothing;
                          listing_url string:${provider_url}/${listing/id/value};">
            <tal:fields>
                
              <tal:image
                  tal:define="image listing/lead_image | nothing">
                  <a  u="image"
                      tal:attributes="href listing_url;
                                      title listing_title">
                    <img
                      tal:condition="image"
                      tal:attributes="src image;
                                      alt listing_title" />
                    <img
                      tal:condition="not:image" alt="" title=""
                      src="++resource++plone.mls.listing.images/no-image.png" />
                   <!-- <small class="caption top"  tal:content="listing_title" />-->
                  </a>
                  <img u="thumb" tal:condition="view/haveThumbnailNavigator"
                    tal:attributes="src listing/lead_image_thumb"/>
              </tal:image>

              <div class="fls-content top"
                tal:condition="view/showCaption"
                u="caption" t="0" t2="0">
                <h2 class="listing-title"><a tal:attributes="href listing_url" tal:content="listing_title" /></h2>

                <div class="item price"
                  tal:define="item listing/price|nothing"
                  tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label" tal:condition="item">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>

                <div class="item beds_baths"
                  tal:define="item listing/beds_baths|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>

                <div class="item location"
                  tal:define="item listing/location|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>

                <div class="item lot_size"
                  tal:define="item listing/lot_size|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="structure item/value">[Value]</a></p>
                </div>

                <div class="item workflow_status"
                  tal:define="item listing/workflow_status|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>

                <div class="item listing_type"
                  tal:define="item listing/listing_type|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>

                <div class="item object_type"
                  tal:define="item listing/object_type|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>

                <div class="item location_type"
                  tal:define="item listing/location_type|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>

                <div class="item view_type"
                  tal:define="item listing/view_type|nothing" tal:condition="item">
                  <h5 class="item-heading" tal:content="item/label">[Label]</h5>
                  <p class="item-body"><a href="" tal:attributes="href listing_url" tal:omit-tag="not: wraplink" tal:content="item/value">[Value]</a></p>
                </div>
              </div>

            </tal:fields>
          </tal:items>
          
        </div>
        <tal:arrownav tal:condition="view/haveArrowNavigator" 
          tal:content="structure view/get_ArrowNavigator|nothing"/>
        <tal:bulletnav tal:condition="view/haveBulletPointNavigator"
          tal:content="structure view/get_BulletPointNavigator|nothing"/>
          <tal:thumbnav tal:condition="view/haveThumbnailNavigator"
          tal:content="structure view/get_ThumbnailNavigator|nothing"/>
      </div>
      </tal:results>
    </div>
    
  </div>
  </body>
</html>